<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/color_boton_pincipal_presionar" />
            <corners android:radius="1000dp" />
            <stroke android:width="2dp" android:color="@color/micolor" />
        </shape>
    </item>

    <!-- Estado normal (sin presionar) -->
    <item>
        <shape>
            <solid android:color="@color/color_boton_pincipal_sin_presionado" />
            <corners android:radius="1000dp" />
            <stroke android:width="2dp" android:color="@color/micolor" />
        </shape>
    </item>
</selector>